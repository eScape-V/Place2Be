{% extends 'mobile.html.twig' %}

{% block body %}
        {% if app.user %}
            {% if app.user.actif == true %}
            <h2>Mes sorties</h2>
            <div class="col-md-3">
                <table class="table table-hover">
                    <thead class="thead2" style="display: flex; justify-content: center">
                    <tr class="table-primary">
                        <th scope="col" class="thNomMobile">Nom sortie</th>
                        <th scope="col">Date sortie</th>
                        <th scope="col" class="thLieuMobile">Lieu</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for sortie in sorties %}
                        <tr>
                            <td class="thNomMobile"><a href="{{ path('afficherSortie', {'id':sortie.id}) }}">{{ sortie.nom }}</a></td>
                            <td>{{ sortie.dateHeureDebut | date('d/m/Y')}} à {{ sortie.dateHeureDebut | date('H:i') }}</td>
                            <td class="thLieuMobile">{{ sortie.lieu.nom }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            {% else %}
                <br>
                <div>
                   <h3>Votre compte a été désactivé, veuillez contacter l'administrateur</h3>
                </div>
                <div>
                    <h4>admin@place2be.fr</h4>
                </div>
            {% endif %}
        {% endif %}
{% endblock %}

{% block title %}
    {{ parent() }} | Mes sorties
{% endblock %}

