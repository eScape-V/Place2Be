{% extends 'base.html.twig' %}

{% block body %}

    <table class="table table-hover">
        <thead>
        <tr class="table-primary">
            <th scope="col">Nom de la sortie</th>
            <th scope="col">Date de la sortie</th>
            <th scope="col">Clôture</th>
            <th scope="col">Inscrits/Places</th>
            <th scope="col">Etat</th>
            <th scope="col">Inscrit</th>
            <th scope="col">Organisateur</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>

        {% for sortie in sorties %}
        <tr>
            <td>{{ sortie.nom }}</td>
            <td>{{ sortie.dateHeureDebut | date('d/m/Y')}} à {{ sortie.dateHeureDebut | date('H:i') }}</td>
            <td>{{ sortie.dateLimiteInscription | date('d/m/Y')}} à {{ sortie.dateLimiteInscription | date('H:i') }}</td>
            <td>Column content</td>
            <td>{{ sortie.etat.getLibelle() }}</td>
            <td>Column content</td>
            <td>{{ sortie.organisateur.getNom() }}</td>
            <td><a href="{{ path('sortie_show') }}" class="btn btn-primary">Détails</a></td>
        </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}

{% block title %}
    {{ parent() }} | Accueil
{% endblock %}

